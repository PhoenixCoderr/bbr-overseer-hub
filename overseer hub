getgenv().StartToggle = true

local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Overseer Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "OverseerHub"})




local Tab = Window:MakeTab({
	Name = "City",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "City Only"
})

Tab:AddButton({
	Name = "Auto Grind",
	Callback = function()
        local Workspace = game:GetService("Workspace")
        local ReplicatedStorage = game:GetService("ReplicatedStorage")
        local Players = game:GetService("Players")


        local Player = Players.LocalPlayer
        local Event = ReplicatedStorage:WaitForChild("event")
        local Trainer = require(ReplicatedStorage:WaitForChild("trainer"))
        local Events = require(Player:WaitForChild("PlayerGui"):WaitForChild("framework"):WaitForChild("events"))


        local Beys = Workspace:WaitForChild("beyblades")
        local Battles = Workspace:WaitForChild("battles")
        local Specials = Workspace:WaitForChild("specials")


        function GetBey()
            local Bey = Beys:FindFirstChild(Player.Name)
            if Bey and Bey.PrimaryPart then
                return Bey
            end
            return false
        end


        Battles.ChildRemoved:Connect(function(A_1)
            if A_1.Name == Player.Name .. "_Target" then
                wait()
                Event:FireServer("BattleTower")
            end
        end)


        Event:FireServer("BattleTower")


        Events.TrainerBattleResult = function()
            wait()
            Trainer.close()
        end


        while wait(0.1) do
            
            local Bey = GetBey()
            if Bey then
                
                while Bey.Parent and wait() do
                    local Enemy = Beys:FindFirstChild(Player.Name .. "_Target")
                        pcall(function()
                            Enemy:FindFirstChildOfClass("Humanoid").Health = 0
                        end)
                    end
                end
            end
    
    end            
})


Tab:AddLabel("Rejoin Server to stop grinding.")

local adventuretab = Window:MakeTab({
	Name = "Adventure",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local TabColo = Window:MakeTab({
	Name = "Colosseum",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = TabColo:AddSection({
	Name = "Colosseum ONLY"
})


TabColo:AddButton({
	Name = "Afk Farm",
	Callback = function()

        print('attack = 40000')
        print('defense = 0')
        print('stamina = 0')
        print('special = 20000')
        print('luck = 7000')
        print('All the above stats include crystal power.')

        print('If you do not have enough points for these stats, you can use any sniping stat for your rank.')
        
        TabColo:MakeNotification({
            Name = "Console",
            Content = "Type /console or press f9 on your keyboard to check stats for necessary information",
            Image = "rbxassetid://4483345998",
            Time = 5
        })

        local Beys = workspace.beyblades

        local plr = game.Players.LocalPlayer

        local spamming = true

        function stopSpam()
            spamming = false
        end

        function meteorSpam()
            while spamming == true do
                game:GetService("ReplicatedStorage"):WaitForChild("func"):InvokeServer("skill",1681155662.6952205,1)
            wait()
            end
        end


        local playerArena = Beys:FindFirstChild(plr)

        if playerArena then
            meteorSpam()
        else
            stopSpam()
        end

  	end


})

adventuretab:AddLabel("In Beta! Expect bugs.")

adventuretab:AddButton({
	Name = "Auto Crystal Finder",
	Default = false,
	Callback = function()
        OrionLib:MakeNotification({
            Name = "Finding",
            Content = "Wait for a crystal to spawn. If a crystal spawns, you will teleport to it.",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
        while true do
        local crystal = workspace:WaitForChild("crystal") -- wait for the crystal part to be loaded in the Workspace
        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = crystal.CFrame
        wait()
        end
        

	end
})





OrionLib:Init()
